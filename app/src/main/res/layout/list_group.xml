<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <data>
        <variable
            name="viewModel"
            type="com.wanghao.myarchitecture.ui.viewmodel.ItemGroupViewModel"/>
    </data>
    
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:foreground="?attr/selectableItemBackground"
        android:stateListAnimator="@anim/state_anim_raise"
        android:clickable="true"
        app:cardCornerRadius="2dp"
        app:cardElevation="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:onClick="@{viewModel.onItemClick}">

            <ImageView
                android:id="@+id/img_group"
                android:layout_width="130dp"
                android:layout_height="95dp"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                app:imageUrl="@{viewModel.getThumb()}"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="95dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_toRightOf="@id/img_group" >

                <TextView
                    android:id="@+id/txt_title_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lineSpacingMultiplier="1.3"
                    android:lines="2"
                    android:text="@{viewModel.getTitle()}"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txt_group_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_title_group"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="@{viewModel.getAddress()}"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txt_group_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_group_address"
                    android:gravity="bottom"
                    android:layout_alignParentBottom="true"
                    android:text="@{@string/group_price(viewModel.getPrice())}"
                    android:textColor="#ff0000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txt_content_group_people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_group_address"
                    android:gravity="bottom"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:text="@{@string/group_people(viewModel.getOrders())}"
                    android:textSize="13sp" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>